<div class="comment">
    <h4>Comment by <%= comment.author_name %></h4>
    <p><%= comment.body %></p>
    <%if user_signed_in? and comment.author_name == current_user.email.split("@")[0]%>
    <%= link_to 'Delete comment', movie_comment_path(@movie,comment), :method => :delete,data: {:confirm => 'Are you sure?'}%>
    <% end %>
    <p>Posted <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</p>
</div>