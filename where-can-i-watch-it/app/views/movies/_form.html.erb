<h3>Post a Comment</h3>

<div class="field">
    <%= form_for [ @movie, @comment ] do |f| %>
      <p>
        <%= f.label :author_name, "Your Name", :class => 'field-label' %><br/>
        <%= f.text_field :author_name %>
      </p>
      <p>
        <%= f.label :body, "Your Comment", :class => 'field-label' %><br/>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit 'Submit', :class => 'btn' %>
      </p>
    <% end %>
</div>